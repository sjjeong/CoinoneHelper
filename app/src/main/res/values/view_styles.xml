<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CoinTickerCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PositiveButton">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">@drawable/text_selector</item>
    </style>

    <style name="NegativeButton">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/btn_error_selector</item>
        <item name="android:textColor">@drawable/text_error_selector</item>
    </style>

    <style name="DashDot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/dash_dot</item>
    </style>

    <style name="SlideItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>